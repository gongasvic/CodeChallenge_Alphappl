<div class="well">

  <div class="row">
    <div class="col-xs-8">
      <h4><%= produto.nome %></h4>
    </div>
    <div class="col-xs-4">
      
      <%= form_for prodencomendados, remote: true do |f| %>
        <h4 class="text-right">Unit Price: <span style="color: green"><%= number_to_currency prodencomendados.preco_unit %></span></h4>
        <div class="row">
          <div class="col-xs-4">
            <%= f.number_field :quantidade, value: prodencomendados.quantidade.to_i, class: "form-control", min: 1 %>
            <%= f.hidden_field :produto_id, value: produto.id %>
          </div>
          <div class="col-xs-8 text-right">
            <div class="btn-group">
              <%= f.submit "Update Quantity", class: "btn btn-primary" %>
              <%= link_to "Delete", prodencomendados, { data: { confirm: "Are you sure you wish to delete the product '#{prodencomendados.produto.nome}' from your cart?" }, method: :delete, remote: true, class: "btn btn-danger" } %>
            </div>
          </div>
        </div>
        <h4 class="text-right">Total Price: <span style="color: green"><%= number_to_currency prodencomendados.valtotal %></span></h4>
      <% end %>
    </div>
    
  </div>
</div>